{{ nvim_path_settings | join('\n') }}

-- Packer Initialization
local packer = require('packer')

-- Packer Settings
packer.init({
  display = {
    open_fn = function()
      return require("packer.util").float { border = "rounded" }
    end,
  },
  git = {
    cmd = '{{ git_exe }}',
    clone_timeout = 80,
  },
  autoremove = true,
})

-- Packer Plugins
packer.startup(function(use)
  -- Package manager
  use 'wbthomason/packer.nvim'

  -- Neovim Plugins
  {% for plugin in nvim_default_plugins -%}
  {{ nvim_default_plugins[plugin]['packer'] | join('\n') | indent(2) }}
  {% endfor %}

  {{ language_neovim_plugins_file or "-- No Language Plugins Installed" }}
end)

